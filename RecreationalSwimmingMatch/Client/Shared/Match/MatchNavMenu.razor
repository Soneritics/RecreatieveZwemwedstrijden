<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Wedstrijd beheren</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/match" Match="NavLinkMatch.All">
                <span class="oi oi-clipboard" aria-hidden="true"></span> Wedstrijdoverzicht
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/match/registrations">
                <span class="oi oi-list" aria-hidden="true"></span> Inschrijvingen
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/match/program">
                <span class="oi oi-calendar" aria-hidden="true"></span> Wedstrijdprogramma
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool _collapseNavMenu = true;

    private string? NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }
}
